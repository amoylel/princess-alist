[svn]

## Specify root directories contain SVN working copy.
## The pathname supports environment variables (e.g. %APPDATA% in Windows,
## $HOME in UNIX/Linux), and '~' symbol in UNIX/Linux.
# root_dirs = %HOME%\My Documents\Visual Studio 2005\Projects\,
#             %HOME%\Repositories\SVN\
root_dirs = ~/Repositories/SVN

## If root_dirs (see above) have some directories your don't
## want to be checked the SVN status, open this option, and specify
## some values.
## The pathname supports environment variables (e.g. %APPDATA% in Windows,
## $HOME in UNIX/Linux), '~' symbol in UNIX/Linux, and wildcard character (e.g. *foo*).
exclude_dirs = *read-only*
